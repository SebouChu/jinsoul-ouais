<%= content_for :title, 'Idols' %>

<div class="container">
  <h1>Idols (<%= @idols.total_count %>)</h1>

  <div class="actions mb-3">
    <%= link_to 'New Idol', new_admin_idol_path, class: 'btn btn-success' %>
  </div>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Group</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @idols.each do |idol| %>
        <tr>
          <td><%= link_to idol.name, [:admin, idol] %></td>
          <td><%= link_to idol.group, [:admin, idol.group] %></td>
          <td>
            <%= link_to 'Edit', [:edit, :admin, idol], class: 'btn btn-sm btn-primary' %>
            <%= link_to 'Destroy',
                        [:admin, idol],
                        method: :delete,
                        data: { confirm: 'Are you sure?' },
                        class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @idols, theme: 'twitter-bootstrap-4' %>
</div>